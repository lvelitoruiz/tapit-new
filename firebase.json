{
  "hosting": [
    {
      "headers": [ {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css)",
        "headers" : [ {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        } ]
      } ]
    },
    {
      "site": "tapit-app-dev",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/app/**",
          "destination": "/app/index.html"
        }
      ]
    },
    {
      "site": "tapit-app-testing",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/app/**",
          "destination": "/app/index.html"
        }
      ]
    },
    {
      "site": "tapit-app-production",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/app/**",
          "destination": "/app/index.html"
        }
      ]
    }
  ]
}
